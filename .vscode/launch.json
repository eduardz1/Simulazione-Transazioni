    "version": "0.2.0",
    "configurations": [        
        {
            "name": "debug Nodes",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/master",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Follows node when forked",
                    "text": "-gdb-set follow-fork-mode child",
                    "ignoreFailures": false
                },
                {
                    "description": "Follows node when exec'd",
                    "text": "-gdb-set follow-exec-mode new",
                    "ignoreFailures": false
                },/*
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },*/
                {
                    "description":  "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "debug Master",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/master",
            "stopAtEntry": true,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Attach to Node",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceFolder}/nodes",
            "processId": "${command:pickProcess}",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}